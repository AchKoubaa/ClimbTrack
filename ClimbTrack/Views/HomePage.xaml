<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:layouts="http://schemas.microsoft.com/dotnet/2021/maui/layouts"
             xmlns:viewmodels="clr-namespace:ClimbTrack.ViewModels"
             xmlns:models="clr-namespace:ClimbTrack.Models"
             xmlns:converters="clr-namespace:ClimbTrack.Converters"
             x:Class="ClimbTrack.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Background =" WhiteSmoke"
             Title="{Binding Title}">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Make sure this style is defined correctly -->
            <Style x:Key="PanelPickerStyle" TargetType="Picker">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            </Style>

            <Style x:Key="RouteItemStyle" TargetType="Frame">
                <Setter Property="Padding" Value="12" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>

            <Style x:Key="StartButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="BlueViolet" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="20" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="20" />
                <Setter Property="Padding" Value="24,12" />
                <Setter Property="HorizontalOptions" Value="Fill" />
                <Setter Property="HeightRequest" Value="50" />
            </Style>

            <Style x:Key="DifficultyIndicatorStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HeightRequest" Value="24" />
                <Setter Property="WidthRequest" Value="24" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <!-- Add converter if needed -->
            <converters:DifficultyToColorConverter x:Key="DifficultyToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <Shell.TitleView>
        <Grid
            BackgroundColor="BlueViolet" >
            <Label Text="{Binding Title}" 
                   FontAttributes="Bold" 
                   FontSize="35"
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>
    <ScrollView>
        <Grid RowDefinitions="Auto, Auto, *, Auto" Padding="10" RowSpacing="0">
        
            <!-- Header with panel selection -->
            <VerticalStackLayout Grid.Row="0" Spacing="0" Margin="0,0,0,10">
                <Label Text="Climbing Wall" 
                       FontSize="18" 
                       FontAttributes="Bold" 
                       TextColor="#333333" 
                       Padding="10"
                       AutomationProperties.IsInAccessibleTree="True"
                       AutomationProperties.Name="Titolo selezione pannello" />

                <Picker ItemsSource="{Binding AvailablePanels}"
                        SelectedItem="{Binding SelectedPanel}"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="#333333"
                        BackgroundColor="White"
                        HorizontalOptions="FillAndExpand"
                        AutomationProperties.Name="Seleziona Pannello"
                        AutomationProperties.HelpText="Seleziona il tipo di pannello per visualizzare i percorsi disponibili" />
            </VerticalStackLayout>

            <!-- Routes header -->
            <Label Grid.Row="1" 
                   Text="Routes" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   TextColor="#333333"
                   Padding="10"
                   HorizontalOptions="Start" />

            <!-- Routes list - with fixed height to work inside ScrollView -->
            <CollectionView Grid.Row="2"
                           ItemsSource="{Binding Routes}"
                           SelectionMode="None"
                           >
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ClimbingRoute">
                        <Frame Style="{StaticResource RouteItemStyle}">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <!-- Color indicator -->
                                <BoxView Grid.Column="0"
                                         Color="{Binding ColorHex}"
                                         BackgroundColor="Transparent"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         CornerRadius="12"
                                         VerticalOptions="Center"
                                         AutomationProperties.Name="{Binding Color, StringFormat='Colore: {0}'}" />

                                <!-- Route information -->
                                <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                    <Label Text="{Binding Color}" 
                                           FontSize="16"
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           AutomationProperties.Name="{Binding Color, StringFormat='Colore: {0}'}" />
                                </VerticalStackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="Nessun percorso disponibile" 
                               FontSize="18" 
                               TextColor="#666666"
                               HorizontalOptions="Center"
                               AutomationProperties.Name="Nessun percorso disponibile" />
                        <Button Text="Ricarica" 
                                Command="{Binding LoadRoutesCommand}"
                                HorizontalOptions="Center"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                CornerRadius="20"
                                Padding="20,10"
                                Margin="0,10,0,0"
                                AutomationProperties.Name="Ricarica percorsi"
                                AutomationProperties.HelpText="Premi per ricaricare la lista dei percorsi" />
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
            </CollectionView>

            <!-- Loading indicator -->
            <Grid Grid.Row="2" IsVisible="{Binding IsBusy}">
                <Rectangle Fill="#80000000" />
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <ActivityIndicator IsRunning="{Binding IsBusy}"
                                       Color="White"
                                       HorizontalOptions="Center" />
                    <Label Text="Caricamento percorsi..."
                           TextColor="White"
                           HorizontalOptions="Center"
                           Margin="0,10,0,0"
                           AutomationProperties.Name="Caricamento in corso" />
                </VerticalStackLayout>
            </Grid>
        
        <!-- Start button -->
            <Button Grid.Row="3"
                    Text="Inizia Allenamento" 
                    Command="{Binding StartTrainingCommand}"
                    Style="{StaticResource StartButtonStyle}"
                    AutomationProperties.Name="Inizia Allenamento"
                    AutomationProperties.HelpText="Premi per iniziare un nuovo allenamento con i percorsi selezionati" />
        </Grid>
  </ScrollView>
</ContentPage>