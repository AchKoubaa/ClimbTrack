<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:ClimbTrack.ViewModels"
             xmlns:models="clr-namespace:ClimbTrack.Models"
             xmlns:converters="clr-namespace:ClimbTrack.Converters"
             x:Class="ClimbTrack.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Background="WhiteSmoke"
             Title="{Binding Title}">




    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Make sure this style is defined correctly -->
            <Style x:Key="PanelPickerStyle" TargetType="Picker">
                <Setter Property="FontSize" Value="20" />
                <Setter Property="TextColor" Value="Black" />
                <Setter Property="BackgroundColor" Value="White" />
                <Setter Property="HorizontalOptions" Value="FillAndExpand" />
            </Style>

            <Style x:Key="RouteItemStyle" TargetType="Frame">
                <Setter Property="Padding" Value="12" />
                <Setter Property="BorderColor" Value="Transparent" />
                <Setter Property="BackgroundColor" Value="Transparent" />
                <Setter Property="HasShadow" Value="False" />
                <Setter Property="CornerRadius" Value="8" />
                <Setter Property="Margin" Value="0,0,0,8" />
            </Style>

            <Style x:Key="StartButtonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="BlueViolet" />
                <Setter Property="TextColor" Value="White" />
                <Setter Property="FontSize" Value="16" />
                <Setter Property="FontAttributes" Value="Bold" />
                <Setter Property="CornerRadius" Value="25" />
                <Setter Property="Padding" Value="24,12" />
                <Setter Property="HorizontalOptions" Value="Fill" />
            </Style>

            <Style x:Key="DifficultyIndicatorStyle" TargetType="Frame">
                <Setter Property="CornerRadius" Value="12" />
                <Setter Property="HeightRequest" Value="24" />
                <Setter Property="WidthRequest" Value="24" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="HorizontalOptions" Value="Center" />
            </Style>

            <!-- Add converter if needed -->
            <converters:DifficultyToColorConverter x:Key="DifficultyToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Shell.TitleView>
        <Grid
            BackgroundColor="BlueViolet">
            <Label Text="{Binding Title}" 
                   FontAttributes="Bold" 
                   FontSize="35"
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>
    <!-- Modified Grid structure to ensure proper layout -->
    <Grid RowDefinitions="Auto,Auto,*,Auto,Auto" Padding="10" RowSpacing="10">
        <!-- Header con selezione pannello -->
        <StackLayout Grid.Row="0" Spacing="0" Margin="0,0,0,10">
            <Label Text="Climbing Wall" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="#333333" 
                   Padding="10"
                   AutomationProperties.IsInAccessibleTree="True"
                   AutomationProperties.Name="Titolo selezione pannello" />

            <!-- Use inline style instead of StaticResource to avoid the error -->
            <Picker ItemsSource="{Binding AvailablePanels}"
                    SelectedItem="{Binding SelectedPanel}"
                    FontSize="22"
                    FontAttributes="Bold"
                    TextColor="#333333"
                    BackgroundColor="White"
                    HorizontalOptions="FillAndExpand"
                    AutomationProperties.Name="Seleziona Pannello"
                    AutomationProperties.HelpText="Seleziona il tipo di pannello per visualizzare i percorsi disponibili" />
        </StackLayout>

        <!-- Routes header - Now in its own row with proper margin -->
        <Label Grid.Row="1" 
               Text="Routes" 
               FontSize="22" 
               FontAttributes="Bold" 
               TextColor="#333333"
               Padding="10"
               HorizontalOptions="Start" />

        <!-- Lista percorsi con DataTemplate migliorato -->
        <RefreshView Grid.Row="2"
                     IsRefreshing="{Binding IsRefreshing}"
                     Command="{Binding RefreshCommand}">

            <CollectionView ItemsSource="{Binding Routes}"
                           SelectionMode="None">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:ClimbingRoute">
                        <Frame Style="{StaticResource RouteItemStyle}">
                            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                <!-- Indicatore colore del percorso -->
                                <BoxView Grid.Column="0"
                                         Color="{Binding ColorHex}"
                                         BackgroundColor="Transparent"
                                         WidthRequest="24"
                                         HeightRequest="24"
                                         CornerRadius="12"
                                         VerticalOptions="Center"
                                         AutomationProperties.Name="{Binding Color, StringFormat='Colore: {0}'}" />

                                <!-- Informazioni sul percorso -->
                                <StackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                    <Label Text="{Binding Color}" 
                                           FontSize="16"
                                           TextColor="Black"
                                           FontAttributes="Bold"
                                           AutomationProperties.Name="{Binding Color, StringFormat='Colore: {0}'}" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
                        <Label Text="Nessun percorso disponibile" 
                               FontSize="18" 
                               TextColor="#666666"
                               HorizontalOptions="Center"
                               AutomationProperties.Name="Nessun percorso disponibile" />
                        <Button Text="Ricarica" 
                                Command="{Binding LoadRoutesCommand}"
                                HorizontalOptions="Center"
                                BackgroundColor="#2196F3"
                                TextColor="White"
                                CornerRadius="20"
                                Padding="20,10"
                                Margin="0,10,0,0"
                                AutomationProperties.Name="Ricarica percorsi"
                                AutomationProperties.HelpText="Premi per ricaricare la lista dei percorsi" />
                    </StackLayout>
                </CollectionView.EmptyView>
            </CollectionView>
        </RefreshView>

        <!-- Indicatore di caricamento migliorato -->
        <Grid Grid.Row="3" IsVisible="{Binding IsBusy}">
            <Rectangle Fill="#80000000" />
            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="White"
                                   HorizontalOptions="Center" />
                <Label Text="Caricamento percorsi..."
                       TextColor="White"
                       HorizontalOptions="Center"
                       Margin="0,10,0,0"
                       AutomationProperties.Name="Caricamento in corso" />
            </StackLayout>
        </Grid>

        <!-- Pulsante Inizia Allenamento - migliorato con proprietà di accessibilità -->
        <Button Grid.Row="4"
                Text="Inizia Allenamento" 
                Command="{Binding StartTrainingCommand}"
                Style="{StaticResource StartButtonStyle}"
                AutomationProperties.Name="Inizia Allenamento"
                AutomationProperties.HelpText="Premi per iniziare un nuovo allenamento con i percorsi selezionati" />
    </Grid>
</ContentPage>