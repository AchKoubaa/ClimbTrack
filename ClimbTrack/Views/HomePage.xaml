<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:layouts="http://schemas.microsoft.com/dotnet/2021/maui/layouts"
             xmlns:viewmodels="clr-namespace:ClimbTrack.ViewModels"
             xmlns:models="clr-namespace:ClimbTrack.Models"
             xmlns:converters="clr-namespace:ClimbTrack.Converters"
             x:Class="ClimbTrack.Views.HomePage"
             x:DataType="viewmodels:HomeViewModel"
             Title="{Binding Title}">

    <ContentPage.Resources>
        <ResourceDictionary>
            <!-- Keep only the converter here -->
            <converters:DifficultyToColorConverter x:Key="DifficultyToColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <Shell.TitleView>
        <Grid BackgroundColor="#707CD0">
            <Label Text="{Binding Title}" 
                   FontAttributes="Bold" 
                   FontSize="35"
                   TextColor="White" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" />
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="*, Auto">
        <ScrollView Grid.Row="0">
            <Grid RowDefinitions="Auto, Auto, *, Auto" Padding="10" RowSpacing="0">

                <!-- Header with panel selection -->
                <VerticalStackLayout Grid.Row="0" Spacing="0" Margin="0,0,0,10">
                    <Label Text="Climbing Wall" 
                           Style="{StaticResource SubHeadline}"
                           Padding="10"
                           AutomationProperties.IsInAccessibleTree="True"
                           AutomationProperties.Name="Titolo selezione pannello" />

                    <Picker ItemsSource="{Binding AvailablePanels}"
                            SelectedItem="{Binding SelectedPanel}"
                            Style="{StaticResource PanelPickerStyle}"
                            AutomationProperties.Name="Seleziona Pannello"
                            AutomationProperties.HelpText="Seleziona il tipo di pannello per visualizzare i percorsi disponibili" />
                </VerticalStackLayout>

                <!-- Routes header -->
                <Label Grid.Row="1" 
                       Text="Routes" 
                       Style="{StaticResource SubHeadline}"
                       Padding="10"
                       HorizontalOptions="Start" />

                <!-- Routes list -->
                <CollectionView Grid.Row="2"
                               ItemsSource="{Binding Routes}"
                               SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ClimbingRoute">
                            <Frame Style="{StaticResource RouteItemStyle}">
                                <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="15">
                                    <!-- Color indicator -->
                                    <BoxView Grid.Column="0"
                                             Color="{Binding ColorHex}"
                                             BackgroundColor="Transparent"
                                             WidthRequest="24"
                                             HeightRequest="24"
                                             CornerRadius="12"
                                             VerticalOptions="Center"
                                             AutomationProperties.Name="{Binding Color, StringFormat='Colore: {0}'}" />

                                    <!-- Route information -->
                                    <VerticalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                                        <Label Text="{Binding Color}" 
                                               FontSize="16"
                                               TextColor="Black"
                                               FontAttributes="Bold"
                                               AutomationProperties.Name="{Binding Color, StringFormat='Colore: {0}'}" />
                                    </VerticalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                    <CollectionView.EmptyView>
                        <VerticalStackLayout VerticalOptions="Center" HorizontalOptions="Center">
                            <Label Text="Nessun percorso disponibile" 
                                   FontSize="18" 
                                   TextColor="#666666"
                                   HorizontalOptions="Center"
                                   AutomationProperties.Name="Nessun percorso disponibile" />
                            <Button Text="Ricarica" 
                                    Command="{Binding LoadRoutesCommand}"
                                    Style="{StaticResource PrimaryButtonStyle}"
                                    HorizontalOptions="Center"
                                    Padding="20,10"
                                    Margin="0,10,0,0"
                                    AutomationProperties.Name="Ricarica percorsi"
                                    AutomationProperties.HelpText="Premi per ricaricare la lista dei percorsi" />
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                </CollectionView>

                <!-- Loading indicator -->
                <Grid Grid.Row="2" IsVisible="{Binding IsBusy}">
                    <Rectangle Fill="#80000000" />
                    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                           Color="White"
                                           HorizontalOptions="Center" />
                        <Label Text="Caricamento percorsi..."
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"
                               AutomationProperties.Name="Caricamento in corso" />
                    </VerticalStackLayout>
                </Grid>
            </Grid>
        </ScrollView>

        <!-- Start button -->
        <Button Grid.Row="1"
                Text="Inizia Allenamento" 
                Command="{Binding StartTrainingCommand}"
                Style="{StaticResource StartButtonStyle}"
                Margin="10"
                AutomationProperties.Name="Inizia Allenamento"
                AutomationProperties.HelpText="Premi per iniziare un nuovo allenamento con i percorsi selezionati" />
    </Grid>
</ContentPage>