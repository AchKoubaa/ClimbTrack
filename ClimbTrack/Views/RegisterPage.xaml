<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ClimbTrack.ViewModels"
             x:Class="ClimbTrack.Views.RegisterPage"
             x:DataType="viewmodel:RegisterViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto,*" 
          Padding="20"
          RowSpacing="15">

        <!-- Title -->
        <Label Grid.Row="0" 
               Text="Create Account"
               FontSize="28"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,20,0,10"/>

        <!-- Name Entry -->
        <Border Grid.Row="1"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
            <Entry Text="{Binding Name}" 
                   Placeholder="Full Name"
                   Margin="10,0"/>
        </Border>

        <!-- Email Entry -->
        <Border Grid.Row="2"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
            <Entry Text="{Binding Email}" 
                   Placeholder="Email"
                   Keyboard="Email"
                   Margin="10,0"/>
        </Border>

        <!-- Password Entry -->
        <Border Grid.Row="3"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
            <Entry Text="{Binding Password}" 
                   Placeholder="Password"
                   IsPassword="True"
                   Margin="10,0"/>
        </Border>

        <!-- Confirm Password Entry -->
        <Border Grid.Row="4"
                Stroke="#E0E0E0"
                StrokeThickness="1"
                StrokeShape="RoundRectangle 10,10,10,10">
            <Entry Text="{Binding ConfirmPassword}" 
                   Placeholder="Confirm Password"
                   IsPassword="True"
                   Margin="10,0"/>
        </Border>

        <!-- Error Message -->
        <Label Grid.Row="5"
               Text="{Binding ErrorMessage}"
               TextColor="Red"
               FontSize="14"
               HorizontalOptions="Center"
               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringNotNullOrEmptyBoolConverter}}"/>

        <!-- Register Button -->
        <Button Grid.Row="6"
                Text="Register"
                Command="{Binding RegisterCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"/>

        <!-- Back to Login Button -->
        <Button Grid.Row="7"
                Text="Already have an account? Login"
                Command="{Binding BackToLoginCommand}"
                BackgroundColor="Transparent"
                TextColor="#4CAF50"
                VerticalOptions="Start"/>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.Row="7"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"
                           Margin="0,20,0,0"/>
    </Grid>
</ContentPage>