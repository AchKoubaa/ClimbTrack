<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ClimbTrack.ViewModels"
             x:Class="ClimbTrack.MainPage"
             x:DataType="viewmodel:MainViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Welcome Message -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,20">
            <Label Text="Welcome to ClimbTrack!" 
                   FontSize="30" 
                   FontAttributes="Bold" 
                   TextColor="{StaticResource TextPrimaryColor}"
                   HorizontalOptions="Center"
                   AutomationProperties.Name="Welcome title"/>
            <Label Text="{Binding WelcomeMessage}" 
                   FontSize="26" 
                   TextColor="{StaticResource TextPrimaryColor}"
                   HorizontalOptions="Center"
                   AutomationProperties.Name="Welcome message"/>
        </VerticalStackLayout>

        <!-- Content Area -->
        <VerticalStackLayout Grid.Row="1" 
                             VerticalOptions="Center" 
                             HorizontalOptions="Center"
                             Spacing="20">
            <Label Text="You are now logged in with Firebase!" 
                   FontSize="22" 
                   TextColor="{StaticResource TextPrimaryColor}"
                   HorizontalOptions="Center"
                   AutomationProperties.Name="Login confirmation message"/>
            <Button Text="My Profile" 
            Command="{Binding NavigateToProfileCommand}"
            Style="{StaticResource SecondaryButtonStyle}"
            Margin="0,10"
            AutomationProperties.Name="Go to profile"
            AutomationProperties.HelpText="View and edit your profile"/>

            <Button Text="Start Training" 
            Command="{Binding NavigateToTrainingCommand}"
            Style="{StaticResource SecondaryButtonStyle}"
            Margin="0,10"
            AutomationProperties.Name="Start training"
            AutomationProperties.HelpText="Begin a new training session"/>

            <Button Text="View History" 
            Command="{Binding NavigateToHistoryCommand}"
            Style="{StaticResource SecondaryButtonStyle}"
            Margin="0,10"
            AutomationProperties.Name="View history"
            AutomationProperties.HelpText="See your training history"/>
            <Label Text="Your user ID:" 
                   FontSize="18" 
                   TextColor="{StaticResource TextSecondaryColor}"
                   HorizontalOptions="Center"
                   AutomationProperties.Name="User ID label"/>
            <Label Text="{Binding UserId}" 
                   FontSize="14" 
                   TextColor="{StaticResource TextSecondaryColor}"
                   HorizontalOptions="Center"
                   AutomationProperties.Name="User ID value"
                   AutomationProperties.HelpText="This is your unique user identifier"/>
        </VerticalStackLayout>

        <!-- Logout Button -->
        <Button Grid.Row="2" 
                Text="Logout" 
                Command="{Binding LogoutCommand}"
                Style="{StaticResource PrimaryButtonStyle}"
                BackgroundColor="{StaticResource AccentColor}"
                HeightRequest="50"
                Margin="0,20"
                AutomationProperties.Name="Logout button"
                AutomationProperties.HelpText="Press to log out from your account"/>

        <!-- Loading Indicator -->
        <Grid Grid.RowSpan="3" 
              BackgroundColor="#80000000"
              IsVisible="{Binding IsBusy}">
            <VerticalStackLayout HorizontalOptions="Center" 
                                 VerticalOptions="Center"
                                 Spacing="10">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                   Color="White"
                                   HorizontalOptions="Center"
                                   VerticalOptions="Center"
                                   AutomationProperties.Name="Loading indicator"
                                   AutomationProperties.IsInAccessibleTree="{Binding IsBusy}"/>
                <Label Text="Loading..."
                       TextColor="White"
                       HorizontalOptions="Center"
                       AutomationProperties.Name="Loading text"
                       AutomationProperties.IsInAccessibleTree="{Binding IsBusy}"/>
            </VerticalStackLayout>
        </Grid>
    </Grid>
</ContentPage>