<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:ClimbTrack.ViewModels"
             x:Class="ClimbTrack.MainPage"
             x:DataType="viewmodel:MainViewModel"
             Title="{Binding Title}">
    <Grid RowDefinitions="Auto,*,Auto" Padding="20">
        <!-- Welcome Message -->
        <VerticalStackLayout Grid.Row="0" Spacing="10" Margin="0,20">
            <Label Text="Welcome to ClimbTrack!" 
                   FontSize="30" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"/>
            <Label Text="{Binding WelcomeMessage}" 
                   FontSize="26" 
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Content Area -->
        <VerticalStackLayout Grid.Row="1" 
                             VerticalOptions="Center" 
                             HorizontalOptions="Center"
                             Spacing="20">
            <Label Text="You are now logged in with Firebase!" 
                   FontSize="22" 
                   HorizontalOptions="Center"/>
            <Label Text="Your user ID:" 
                   FontSize="18" 
                   HorizontalOptions="Center"/>
            <Label Text="{Binding UserId}" 
                   FontSize="14" 
                   HorizontalOptions="Center"/>
        </VerticalStackLayout>

        <!-- Logout Button -->
        <Button Grid.Row="2" 
                Text="Logout" 
                Command="{Binding LogoutCommand}"
                BackgroundColor="#4CAF50"
                TextColor="White"
                CornerRadius="10"
                HeightRequest="50"
                Margin="0,20"/>

        <!-- Loading Indicator -->
        <ActivityIndicator Grid.RowSpan="3"
                           IsRunning="{Binding IsBusy}"
                           IsVisible="{Binding IsBusy}"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>
    </Grid>
</ContentPage>