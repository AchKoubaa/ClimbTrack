<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ClimbTrack"
    xmlns:views="clr-namespace:ClimbTrack.Views"
    Shell.FlyoutBehavior="Disabled" 
    x:Class="ClimbTrack.AppShell"
    BackgroundColor="{AppThemeBinding Light=#f2f2f2, Dark=#333333}"
    ForegroundColor="{AppThemeBinding Light=#333333, Dark=#ffffff}"
    TabBarBackgroundColor="{AppThemeBinding Light=#f2f2f2, Dark=#333333}"
    TabBarUnselectedColor="{AppThemeBinding Light=#666666, Dark=#999999}"
    Title="ClimbingApp" >


    <!-- Login Shell Content - This will be shown initially -->
    <ShellContent
        x:Name="LoginContent"
        Title="Login"
        ContentTemplate="{DataTemplate views:LoginPage}"
        Route="login" />

    <TabBar x:Name="MainTabs" Route="main" >
        <Tab Title="Home" 
             Icon="house.svg"
             x:Name="HomeTab">
            <ShellContent
                ContentTemplate="{DataTemplate views:HomePage}"
                Route="home" />
        </Tab>

        <Tab Title="Dashboard" 
             Icon="speedometer.svg"
             x:Name="DashboardTab">
            <ShellContent
                ContentTemplate="{DataTemplate views:DashboardPage}"
                Route="dashboard" />
        </Tab>

        <Tab Title="Training" 
             Icon="activity.svg"
             x:Name="TrainingTab">
            <ShellContent
                ContentTemplate="{DataTemplate views:TrainingPage}"
                Route="training" />
        </Tab>

        <Tab Title="Profilo" 
             Icon="person.svg"
             x:Name="ProfileTab">
            <ShellContent
                ContentTemplate="{DataTemplate views:ProfilePage}"
                Route="profile" />
        </Tab>
        <Tab Title="Storico" 
             Icon="clock.svg"
             x:Name="StoricoTab">
            <ShellContent 
                ContentTemplate="{DataTemplate views:HistoricalPage}" 
                Route="historical" />
        </Tab>
    </TabBar>



    <!-- Registrazione -->
    <ShellContent
        Shell.NavBarIsVisible="True"
        Title="Registrazione"
        ContentTemplate="{DataTemplate views:RegisterPage}"
        Route="register" />

    <ShellContent
        Shell.NavBarIsVisible="False"
        Shell.TabBarIsVisible="False"
        Title="Modifica Profilo"
        ContentTemplate="{DataTemplate views:EditProfilePage}"
        Route="editProfile" />

    <ShellContent
        Shell.NavBarIsVisible="True"
        Title="Amministrazione"
        ContentTemplate="{DataTemplate views:AdminPage}"
        Route="admin" />
</Shell>